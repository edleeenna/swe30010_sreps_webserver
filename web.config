<configuration>
   <system.webServer>
    <security>
        <ipSecurity allowUnlisted="false" denyAction="Forbidden"></ipSecurity>
    </security>
     <httpErrors errorMode="Custom" allowAbsolutePathsWhenDelegated="true">
         <remove statusCode="403" />
         <error statusCode="403"
            path="%HOME%\site\wwwroot\errors\403.html" />
         <remove statusCode="404" />
         <error statusCode="404"
            path="%HOME%\site\wwwroot\errors\404.html" />			
       </httpErrors>
   </system.webServer>
</configuration>